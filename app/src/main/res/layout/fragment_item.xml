<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/musicView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/musicImage"
        android:layout_width="@dimen/mine_order_img_width"
        android:layout_height="@dimen/mine_order_img_width"
        android:layout_marginBottom="@dimen/main_item_margin"
        android:layout_marginLeft="@dimen/padding_16dp"
        android:layout_marginTop="@dimen/main_item_margin"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/musicName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="123"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/main_red"
            android:textSize="@dimen/font_size_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/musicSinger"
                android:layout_width="@dimen/space_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:scrollHorizontally="true"
                android:text="123"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/main_red"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/musicSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_12dp"
                android:lines="1"
                android:text="326"
                android:textColor="@color/main_red"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/musicTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_12dp"
                android:lines="1"
                android:text="326"
                android:textColor="@color/main_red"
                android:textSize="@dimen/font_size_normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
